---
import Header from '../components/Header.astro';
import '@fontsource-variable/roboto-mono';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body  class="relative">
		<div class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(<div class="relative h-full w-full bg-slate-950"><div class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_500px_at_50%_200px,#3e3e3e,transparent)]"></div></div>)
		<Header />
		<slot />
 
		<style is:global>
			:root {
				color-scheme: light dark;
			}
		
			html {
			
				font-family: 'Roboto Mono Variable', monospace, system-ui, sans-serif;
			}
		
			body {
				background: rgba(95, 99, 104, 1.00);
				display: flex;
				flex-direction: column;
				min-height: 100vh;
				overscroll-behavior: none;
			}
		</style>
	</body>
</html>



