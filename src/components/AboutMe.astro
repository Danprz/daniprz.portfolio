---
import { getI18N } from "../i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<article class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row">
  <div
    class="[&>p]:mb-4 [&>p>strong]:text-green-800  dark:[&>p>strong]:text-green-200/90 [&>p>strong]:font-normal text-pretty order-2 md:order-1"
  >
    <p>
        {i18n.about.first_paragraph} <strong
        >{i18n.about.first_paragraph_highlight}</strong
      >
    </p>
    

    <p>
        {i18n.about.second_paragraph_1}<strong
        > {i18n.about.second_paragraph_1_highlight}</strong
      > {i18n.about.second_paragraph_2} <strong>{i18n.about.second_paragraph_2_highlight}</strong>
    </p>

    <p>
      {i18n.about.third_paragraph_1} <strong
        >{i18n.about.third_paragraph_1_highlight}</strong
      > {i18n.about.third_paragraph_2} 
      <strong> {i18n.about.third_paragraph_2_highlight} </strong>
    </p>
  </div>
   
  <img width="230" height="230" src="https://avatars.githubusercontent.com/u/69302088?v=4" 
  class="order-1 object-cover w-64 h-full p-1 md:order-2  lg:p-2 lg:w-72 aspect-square rounded-2xl bg-neutral-200 dark:bg-white/10  ring-1 ring-neutral-400 dark:ring-white/10 " style="object-position: 80% 80%">

</article>
